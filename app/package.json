{
    "name": "functions-nextjs",
    "scripts": {
        "dev": "next dev",
        "dev-with-emu": "NEXT_PUBLIC_USE_FIRESTORE_EMULATOR=1 next dev",
        "debug": "NODE_OPTIONS='--inspect' next",
        "build-with-emu": "NEXT_PUBLIC_USE_FIRESTORE_EMULATOR=1 next build",
        "build": "next build",
        "start-dev-emulators": "firebase emulators:start --only firestore,auth,storage,functions",
        "start-dev-emulators-seeded": "firebase emulators:start --only firestore,auth,storage,functions --import=./tests/seed",
        "dev-emulate": "concurrently --names emul,dev --kill-others \"npm:start-dev-emulators\" \"npm:dev-with-emu\" ",
        "dev-emulate-seeded": "concurrently --names emul,dev --kill-others \"npm:start-dev-emulators-seeded\" \"npm:dev-with-emu\" ",
        "debug-emulate-seeded": "concurrently --names emul,debug --kill-others \"npm:start-dev-emulators-seeded\" \"npm:debug\" ",
        "shell": "npm run build && firebase functions:shell",
        "start": "next start",
        "lint": "next lint",
        "deploy": "firebase deploy",
        "logs": "firebase functions:log",
        "unit-test": "jest",
        "integration-test": "npx playwright test"
    },
    "engines": {
        "node": "14"
    },
    "dependencies": {
        "@emotion/react": "^11.4.0",
        "@emotion/styled": "^11.3.0",
        "@material-ui/core": "^5.0.0-beta.2",
        "@material-ui/icons": "^5.0.0-beta.1",
        "date-fns": "^2.23.0",
        "final-form": "^4.20.4",
        "firebase": "^9.6.6",
        "globalthis": "^1.0.2",
        "leaflet": "^1.7.1",
        "next": "^12.0.10",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-final-form": "^6.5.7",
        "react-firebaseui": "^6.0.0",
        "react-leaflet": "^3.2.2",
        "reactfire": "^4.2.1"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.14.5",
        "@playwright/test": "^1.13.1",
        "@types/jest": "^26.0.24",
        "@types/leaflet": "^1.7.5",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^17.0.9",
        "babel-jest": "^27.0.6",
        "concurrently": "^6.2.0",
        "firebase-functions-test": "^0.2.0",
        "jest": "^27.0.6",
        "playwright": "^1.13.1",
        "react-test-renderer": "^17.0.2",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5"
    }
}
